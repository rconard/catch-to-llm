{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "API Debug",
            "cwd": "${workspaceFolder}/typescript",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "dev:api"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Webapp Debug",
            "cwd": "${workspaceFolder}/typescript",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "run",
                "dev:webapp"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "compounds": [
        {
            "name": "API/Webapp Debug",
            "configurations": ["API Debug", "Webapp Debug"],
            "stopAll": true
        }
    ]
}
